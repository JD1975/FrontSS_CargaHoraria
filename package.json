{
  "name": "hourly-load-comparator-cd",
  "version": "1.0.0",
  "productName": "Hourly Load Comparator CD",
  "description": "An Electron application with React",
  "main": "./out/main/index.js",
  "author": "Centro de Desarrollo",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "react-dropzone": "^14.2.3",
    "react-loader-spinner": "^6.1.6",
    "styled-components": "^6.1.13",
    "sweetalert2": "^11.14.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^2.1.0",
    "electron": "^20.3.2",
    "electron-builder": "^23.6.0",
    "electron-notarize": "^1.2.1",
    "electron-vite": "^1.0.11",
    "electron-wix-msi": "^5.1.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^3.1.8"
  },
  "build": {
    "appId": "com.comparacionCD.app",
    "compression" : "maximum",
    "nsis" : {
      "oneClick" : false,
      "deleteAppDataOnUninstall" : true
    },
    "productName" : "Comparador CD",
    "files": [
      "src/**/*",
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "src/renderer/src/executables/",
        "to": "executables/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/renderer/src/documents/",
        "to": "documents/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/renderer/src/images/",
        "to": "images/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "compression" : "maximum"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
